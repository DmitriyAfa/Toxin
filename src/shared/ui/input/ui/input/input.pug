mixin input (props = {})
  -
    const {
      type="text",
      placeholder="Email",
      value=null,
      size="biggest",
      readonly=false,
    } = props

    const inputSizes = ["biggest", "big", "medium"]

    const inputSizeClass = inputSizes.includes(size) && `input_size_${size}`
    const readonlyClass = readonly && 'input_readonly'

    const inputAttributes = {
      class: [
        "input",
        'js-input',
        inputSizeClass,
        readonlyClass,
      ],
      type: type,
      placeholder: placeholder,
      value: value,
      readonly: readonly,
    }

  input&attributes(inputAttributes)