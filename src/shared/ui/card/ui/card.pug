mixin card(props = {})
  -
    const {
      border="round_smallest",
      theme=undefined,
      isSquare=false,
    } = props

    const themes = [
      "darkest-gray", "dark-gray", "gray",
      "light-gray","lightest-gray",
      "primary", "secondary"
      ]

  -
    const borderClass = border === "round_smallest" 
      ? "card_round_smallest" 
      : border === "round_small"
      ? "card_round_small" 
      : border === "round_medium"
      ? "card_round_medium" : ""

    const themeClass = themes.includes(theme) && `card_theme_${theme}`
    const squareClass = 'card_square'

    const classes = [borderClass, theme && themeClass, isSquare && squareClass]

  .card(class=classes)