block content
  .ui-kit-forms
    +column()
      +row({
        gap: '123',
      })
        +column({
          gap: '20',
        })
          +text-field({
            subtitle: 'default',
            type: 'email',
          })
          +text-field({
            value: 'this is pretty awesome',
            subtitle: 'hover/focus',
          })
          +guests-dropdown()
          .ui-kit-forms__masked-text-field
            +text-field({
            placeholder: 'ДД.ММ.ГГГГ',
            title: 'masked text field',
            })
          .ui-kit-forms__date-dropdown
            +date-dropdown()
          .ui-kit-forms__filter-date-dropdown
            +date-dropdown({
              variant: 'filter',
            })
          .ui-kit-forms__subscribtion-text-field
            +text-field({
              type: 'email',
              variant: 'subscribtion',
              title: 'subscribtion text field',
              size: 'medium',
            })
        +column({
          gap: '40',
        })
          .ui-kit-forms__checkbox-buttons
            +checkbox-list({
              title: 'checkbox buttons',
              items:[
                {
                  title: 'Можно курить',
                },
                {
                  title: 'Можно c питомцами',
                  checked: true,
                },
                {
                  title: 'Можно пригласить гостей (до 10 человек)',
                    checked: true,
                },
              ],
            })
          .ui-kit-forms__radio-buttons
            +radio-buttons()
          .ui-kit-forms__toggle-list
            +named-wrapper({
              title: 'toggle',
              gap: '16',
              contentGap: '15',
            })
              +toggle({
                title: 'Получать cпецпредложения',
                checked: true,
              })
              +toggle({
                title: 'Получать cпецпредложения',
              })
          .ui-kit-forms__like-buttons
            +like-buttons()
          +rate-buttons()
        +column({
          gap: '40',
          paddingLeft: '9',
        })
          +range-slider()
          .ui-kit-forms__buttons
            +named-wrapper({
              title: 'buttons',
              gap: '16',
            })
            .ui-kit-forms__buttons-example
              +button-main()
              +button-main({
                hovered: true,
              })
            .ui-kit-forms__buttons-example
              +button-main-bordered()
              +button-main-bordered({
                hovered: true,
              })
            .ui-kit-forms__buttons-example
              +simple-button()
              +simple-button({
                hovered: true,
              })
            .ui-kit-forms__buttons-example
              +big-arrow-button()
            .ui-kit-forms__pagination
              +named-wrapper({
                title: 'pagination',
                gap: '10',
              })
                +pagination({
                  variant: 'example',
                })
      +row()
        .ui-kit-forms__dropdowns
          +row({
            gap: '178',
          })
            +column({
              gap: '20',
            })
              +amenities-dropdown({
                subtitle: 'default',
              })
              +amenities-dropdown({
                subtitle: 'expanded',
                expanded: true,
                items: [
                  {
                    title: 'спальни',
                    value: 2,
                    itemName: 'first',
                  },
                  {
                    title: 'кровати',
                    value: 2,
                    itemName: 'second',
                  },
                  {
                    title: 'ванные комнаты',
                    value: 0,
                    itemName: 'third',
                  },
                ],
                hidden: false,
              })
            +row({
              gap: '71',
            })
              +guests-dropdown()
              +guests-dropdown({
                expanded: true,
                items: [
                  {
                    title: 'взрослые',
                    value: 2,
                    itemName: 'first',
                  },
                  {
                    title: 'дети',
                    value: 1,
                    itemName: 'second',
                  },
                  {
                    title: 'младенцы',
                    value: 0,
                    itemName: 'third',
                  },
                ],
                hidden: false,
              })
      .ui-kit-forms__checkboxes
        +row()
          +row({
            gap: '178',
          })
            +column({
              gap: '19',
            })
              +expandable-checkbox-list()
              +expandable-checkbox-list({
                isOpen: true,
              })
            .ui-kit-forms__checkboxes-rich
              +rich-checkbox-buttons()
          .ui-kit-forms__bullet
            +bullet-list()
      +row({
        gap: '163',
      })
        .ui-kit-forms__avatars
          +column({
            gap: '23',
          })
            +avatar({
              isLined: true,
            })
            +avatar({
              isLined: true,
              title: 'Удобство',
              description: 'Окно в каждой из спален',
              imgName: 'сonvenience.svg',
            })
        .ui-kit-forms__comment
          +comment()


