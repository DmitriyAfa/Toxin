extends @/shared/layouts/ui-kit-layout/ui-kit-layout
include @/shared/ui/flex/index
include @/shared/ui/form-wrapper/index
include @/shared/ui/input/index
include @/entities/dropdown/index
include @/shared/ui/button/index
include @/shared/ui/text/index
include @/features/amenities-dropdown/index
include @/features/guests-dropdown/index
include @/features/text-field/index

block variables
  - const title = 'Form elements'

block style
  link(rel='stylesheet' href=require('@/app/styles/index.scss'))
  link(rel='stylesheet' href=require('@/shared/ui/flex/flex.scss'))
  link(rel='stylesheet' href=require('@/shared/ui/form-wrapper/form-wrapper.scss'))
  link(rel='stylesheet' href=require('@/shared/ui/input/input.scss'))
  link(rel='stylesheet' href=require('@/features/text-field/text-field.scss'))
  link(rel='stylesheet' href=require('@/entities/dropdown/dropdown.scss'))
  link(rel='stylesheet' href=require('@/shared/ui/button/button.scss'))
  link(rel='stylesheet' href=require('@/shared/ui/text/text.scss'))

block content
  +row({
    justify: "center",
    align: "center",
    gap: '20',
  })
    +text-field({
      type: 'date',
      name:"text-field",
      placeholder: "ДД-ММ-ГГГГ",
      value: "ДД-ММ-ГГГГ",
    })


block script
  script(src=require("@/entities/dropdown/dropdown"))
  script(src=require("@/features/amenities-dropdown/amenities-dropdown"))
  script(src=require("@/features/guests-dropdown/guests-dropdown"))